<!-- menu.handlebars -->
<div class="menu-container d-flex justify-content-center align-items-center">
  <div class="menu-image-column">
    <img src="/images/appetizercombo.jpg" alt="Appetizer Combo" class="menu-image">
    <img src="/images/burgerfries.jpg" alt="Burger and Fries" class="menu-image">
    <img src="/images/calamari.jpg" alt="Calamari" class="menu-image">
  </div>

  <div class="menu-content" align="center">
    <div class="card-header pacifico-regular" style="font-size: 50px;">
        Our Menu
      </h2>
    </div>
    {{#each menu as |menuItem|}}
      <div class="dish">
        <p class="item-and-price pacifico-regular" style="font-size: 30px;">
          {{menuItem.menu_item}} - ${{menuItem.price}}
        </p>
        <p class="description kanit-medium" style="font-size: 20px;">
          {{menuItem.description}}
        </p>
        <p class="additional-info kanit-extralight-italic">
          {{#if menuItem.has_nuts}}
            <span class="info">Contains Nuts</span>&nbsp;&nbsp;&nbsp;
          {{/if}}
          {{#if menuItem.has_dairy}}
            <span class="info">Contains Dairy</span>&nbsp;&nbsp;&nbsp;
          {{/if}}
          {{#if menuItem.vegetarian}}
            <span class="info">Vegetarian Option</span>&nbsp;&nbsp;&nbsp;
          {{/if}}
          {{#if menuItem.gluten_free}}
            <span class="info">Gluten Free Option</span>&nbsp;&nbsp;&nbsp;
          {{/if}}
        </p>
      </div>
    {{/each}}
  </div>

  <div class="menu-image-column">
    <img src="/images/artichokedip.jpg" alt="Artichoke Dip" class="menu-image">
    <img src="/images/pizza.jpg" alt="Margherita Pizza" class="menu-image">
    <img src="/images/popcornshrimp.jpg" alt="Popcorn Shrimp" class="menu-image">
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


