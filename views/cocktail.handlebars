<div class="menu-container">
  <div class="card-header">
    <h2>
      Cocktail List
    </h2>
  </div>
  {{#each cocktail as |cocktail|}}
    <div class="drink">
      <p class="item-and-price">
        {{cocktail.drink_name}} - ${{cocktail.price}}
      </p>
      <p class="description">
        {{cocktail.description}}
      </p>
    </div>
  {{/each}}
</div>

